<%= link_to root_path, :class => 'brand' do %>
  <%= image_tag("DBRicon.png", :size => "45x39") %>
  Dallas.rb
<% end %>
<ul class="nav">
  <li>
    <%= link_to "Team", team_path %>
  </li>
  <li>
    <%= link_to "Members", profiles_path %>
  </li>
  <li>
    <%= link_to "Events", current_events_path %>
  </li>
</ul>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li>
      <p class="navbar-text">
        Signed in as <%= current_user.email %>
      </p>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-cog"></i>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <% if current_user.has_role? :admin %>
          <li>
          <%= link_to 'Admin', admin_users_path %>
          </li>
        <% end %>
        <li>
          <%= link_to "Profile", url_for([:edit, current_user.profile]) %>
        </li>
        <li>
          <%= link_to 'Logout', signout_path %>
        </li>
      </ul>
    </li>
  <% else %>
    <li>
      <%= link_to signin_path do %>
        <i class="icon-github icon-large"></i> Sign in with GitHub
      <% end %>
    </li>
  <% end %>
</ul>
