<%= link_to "Dallas Ruby Brigade", root_path, :class => 'brand' %>
<ul class="nav">
  <li>
    <%= link_to "Team", team_path %>
  </li>
  <li>
    <%= link_to "Members", members_path %>
  </li>
  <li>
    <a href="#">Events</a>
  </li>
</ul>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li>
      <p class="navbar-text">
        Signed in as <%= current_user.email %>
      </p>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-cog"></i>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <% if current_user.has_role? :admin %>
          <li>
          <%= link_to 'Admin', users_path %>
          </li>
        <% end %>
        <li>
          <%= link_to "Profile", url_for([:edit, Member.find_by_email(current_user.email)]) %>
        </li>
        <li>
          <%= link_to 'Logout', signout_path %>
        </li>
      </ul>
    </li>
  <% else %>
    <li>
      <%= link_to 'Login', signin_path %>
    </li>
  <% end %>
</ul>
