<div class="row-fluid">
  <div class="span12 well">
    <div class="row-fluid">
      <div class="span4">
        <h2>Monthly Talk</h2>
        <p><i class="icon-time"></i><%= event_timestamp(event) %></p>
        <h3><%= event.title %></h3>
        <p><strong>Speaker(s):</strong> <%= event.speaker %></p>
        <p><strong>Venue:</strong><p>
        <%= address_helper(event.event_addresses.first) %>
        <p>
          RSVP <%= link_to "here.", event.rsvp_url %>
        </p>
      </div>

      <div class="span4">
        <%= render 'events/event_map', :event_address => event.event_addresses.first %>
      </div>
    </div>

    <hr />

    <div class="row-fluid">
      <div class="span8">
        <p>
          <%= kramdown(event.description) %>
        </p>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span5">
        <p>
        <%= link_to events_path, :class => "btn btn-primary btn-large" do %>
          See all events <i class="icon-circle-arrow-right"></i>
        <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
