<div class="row-fluid">
  <div class="span12 well">
    <div class="row-fluid">
      <div class="span4">
        <h2><%= event.title %></h2>
        <p><i class="icon-time"></i><%= event_timestamp(event) %></p>
        <p><strong>Venue(s):</strong><p>
        <% if event.event_addresses.size > 1 %>
          <%= addresses_helper(event) %>
        <% else %>
          <%= address_helper(event.event_addresses.first) %>
        <% end %>
        <%= render 'events/rsvp_button', :event => event %>
      </div>

      <div class="span4">
        <% if event.event_addresses.size > 1 %>
          <%= render 'events/event_multi_map', :event_addresses => event.event_addresses %>
        <% else %>
          <%= render 'events/event_map', :event_address => event.event_addresses.first %>
        <% end %>
      </div>
    </div>

    <hr />

    <div class="row-fluid">
      <div class="span8">
        <p>
          <%= kramdown(event.description) %>
        </p>
      </div>
    </div>

    <hr />

    <%= render 'events/rsvp_list', :event => event %>
  </div>
</div>
