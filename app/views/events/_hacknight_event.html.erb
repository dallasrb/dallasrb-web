<div class="row-fluid">
  <div class="span12 well">
    <div class="row-fluid">
      <div class="span4">
        <h2><%= event.title %></h2>
        <p><i class="icon-time"></i><%= event_timestamp(event) %></p>
        <p><strong>Venue:</strong><p>
        <%= address_helper(event) %>
        <p>
          RSVP <%= link_to "here.", event.rsvp_url %>
        </p>
      </div>

      <div class="span4">
        <%= render 'events/event_map', :event => event %>
      </div>
    </div>

    <hr />

    <div class="row-fluid">
      <div class="span8">
        <p>
          <%= kramdown(event.description) %>
        </p>
      </div>
    </div>
  </div>
</div>
