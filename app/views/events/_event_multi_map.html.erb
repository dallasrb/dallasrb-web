<% event_addresses.each_with_index do |event_address, index| %>
  <% if index == 0 %>
    <%= gmaps("map_options" => {
                                 :id => "map_#{index}",
                                 "container_class" => "event_multi_map",
                                 "class" => "event_multi_map",
                                 "detect_location" => false,
                                 "auto_zoom" => false,
                                 "auto_adjust" => true,
                                 "zoom" => 15
                               },
                               "markers" => { "data" => event_address.gmaps4rails_address },
                               :last_map => false)
    %>
    <br />
  <% elsif(index == (event_addresses.length - 1)) %>
    <%= gmaps("map_options" => {
                                 :id => "map_#{index}",
                                 "container_class" => "event_multi_map",
                                 "class" => "event_multi_map",
                                 "detect_location" => false,
                                 "auto_zoom" => false,
                                 "auto_adjust" => true,
                                 "zoom" => 15
                               },
                               "markers" => { "data" => event_address.gmaps4rails_address },
                               :scripts => :none)
    %>
    <br />
  <% else %>
    <%= gmaps("map_options" => {
                                 :id => "map_#{index}",
                                 "container_class" => "event_multi_map",
                                 "class" => "event_multi_map",
                                 "detect_location" => false,
                                 "auto_zoom" => false,
                                 "auto_adjust" => true,
                                 "zoom" => 15
                               },
                               "markers" => { "data" => event_address.gmaps4rails_address },
                               :scripts => :none,
                               :last_map => false) 
    %>
    <br />
  <% end %>
<% end %>
