<%= render 'shared/admin_menu' %>

<div class="row-fluid">
  <div class="span10 offset1">
    <hr />
  </div>
</div>

<div class="row-fluid">
  <div class="span10 offset1">
    <h3>Events</h3>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span10 offset1">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Event Date</th>
          <th>Event Type</th>
          <th>Title</th>
          <th>Address</th>
          <th>Published</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.event_date.to_date %></td>
            <td><%= event.event_type.name.capitalize %></td>
            <td><%= link_to(event.title, [:edit, :admin, event]) %></td>
            <td><%= event.address %></td>
            <td><%= event.published? ? "Yes" : "No" %></td>
            <td>
              <%= link_to(admin_event_path(event),
                          :data => { :confirm => "Are you sure?" },
                          :method => :delete,
                          :class => 'btn btn-mini',
                          "data-toggle" => "tooltip",
                          :title =>"Delete Event"
                         ) do %>
                <i class="icon-trash"></i>
              <% end %>
              <%= link_to(copy_admin_event_path(event),
                          :method => :get,
                          :class => 'btn btn-mini',
                          "data-toggle" => "tooltip",
                          :title =>"Copy Event"
                         ) do %>
                <i class="icon-copy"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
